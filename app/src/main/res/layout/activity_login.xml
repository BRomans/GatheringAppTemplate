<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/gradient"
              tools:context=".LoginActivity">

    <!-- Login progress -->
    <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    <ImageView
            android:layout_width="129dp"
            android:layout_height="124dp" app:srcCompat="@mipmap/cnr_launcher_round"
            android:id="@+id/imageView2" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="28dp" android:background="@android:color/transparent"
            android:visibility="visible"/>
    <TextView
            android:text="GatheringApp"
            android:layout_width="228dp"
            android:layout_height="55dp"
            android:id="@+id/textView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="189dp" android:fontFamily="cursive" android:textSize="36sp"
            android:textAlignment="center"/>
    <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">

        <RelativeLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:inputType="textPersonName"
                    android:hint="Username / Email"
                    android:ems="10"
                    android:textSize="16sp"
                    android:id="@+id/editText"
                    android:background="#CFD8DC"
                    android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"/>
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:textSize="16sp"
                    android:background="#CFD8DC"
                    android:hint="Password"
                    android:id="@+id/editText2"
                    android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                    android:layout_marginTop="76dp"/>
            <Button
                    android:text="Sign-In / Login"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_button"
                    android:id="@+id/button2"
                    android:elevation="8dp"
                    android:layout_centerInParent="true"/>

            <Button
                    android:text="Google"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:drawableLeft="@drawable/com_facebook_button_background"
                    android:background="@drawable/rounded_button_google"
                    android:id="@+id/button3"
                    android:elevation="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/editText"/>

            <Button
                    android:text="Facebook"
                    android:layout_width="96dp"
                    android:layout_height="30dp"
                    android:drawableLeft="@drawable/com_facebook_button_background"
                    android:background="@drawable/rounded_button_facebook"
                    android:id="@+id/button5"
                    android:elevation="8dp"
                    android:layout_alignEnd="@+id/editText"
                    android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>